{% extends 'WodorNetMotoTripBundle::mototrip.html.twig' %}

{% block content %}
<h1>Trip list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Creationdate</th>
            <th>Description</th>
            <th>Startdate</th>
            <th>Enddate</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('trip_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.creationDate %}{{ entity.creationDate|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{{ entity.description }}</td>
            <td>{% if entity.startDate %}{{ entity.startDate|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.endDate %}{{ entity.endDate|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('trip_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('trip_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('trip_new') }}">
            Create a new entry
        </a>
    </li>
</ul>

{% endblock %}
